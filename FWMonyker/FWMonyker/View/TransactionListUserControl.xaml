<UserControl x:Class="FWMonyker.View.TransactionListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:View="clr-namespace:FWMonyker.View"
             xmlns:Model="clr-namespace:FWMonyker.Model;assembly=FWMonyker.Model"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500
"> 
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type Model:Transaction}">
            <View:TransactionUserControl/>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Margin="0 0 0 25" Style="{StaticResource textHeader}">
            transactions
        </TextBlock>
        <Grid Height="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Expander Header="soter efter dato" HorizontalAlignment="Left" Margin="390,0,0,0" VerticalAlignment="Top" Height="25" Width="110">
            </Expander>
            <Button Content="tilføj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="25"
                    Command="{Binding DataContext.MainViewodel, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
        CommandParameter="{Binding This}"/>
            
            <TextBox HorizontalAlignment="Left" Height="25" Grid.Row="1" TextWrapping="Wrap" Text="søg" VerticalAlignment="Top" Width="500" />

        </Grid>
 

        <ItemsControl Margin="3"
                      ItemsSource="{Binding Transactions}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <View:TransactionUserControl/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Control.FontSize" Value="13"/>
                    <Setter Property="Control.FontFamily" Value="Helvetica"/>
                    <Setter Property="Control.FontWeight" Value="Light"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        
    </StackPanel>
</UserControl>
